CREATE TABLE Filmler (
    film_id INT PRIMARY KEY,
    ad VARCHAR(100),
    tur VARCHAR(50),
    yayin_yili INT,
    yonetmen VARCHAR(100),
    IMDB_puani DECIMAL(3, 1)
);

INSERT INTO Filmler (film_id, ad, tur, yayin_yili, yonetmen, IMDB_puani)
VALUES 
